{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "dist",
    "target": "es2022",
    "module": "commonjs",
    "lib": ["es2022", "dom"],
    "types": ["node", "jest"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "sourceMap": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules", "dist", "test", "**/*.spec.ts"]
}
