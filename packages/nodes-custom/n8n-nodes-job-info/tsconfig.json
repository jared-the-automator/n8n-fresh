{
  "compilerOptions": {
    "lib": ["es2019", "es2020", "es2021", "es2022"],
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./dist",
    "target": "es2019",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["nodes/**/*", "credentials/**/*"],
  "exclude": ["node_modules/**/*", "dist/**/*"]
}